export DIR_NAME=$(date '+%Y-%m-%d-%T')

if [[ ${here} == 'nersc' ]]; then
    mkdir /pscratch/sd/j/jiuy97/_TRASH/${DIR_NAME}
    mv -v $* /pscratch/sd/j/jiuy97/_TRASH/${DIR_NAME}
elif [[ ${here} == 's3df' ]]; then
    mkdir /sdf/data/suncat/suncatlustre/hailey/_TRASH/${DIR_NAME}
    mv -v $* /sdf/data/suncat/suncatlustre/hailey/_TRASH/${DIR_NAME}
else
    mkdir ~/_TRASH/${DIR_NAME}
    mv -v $* ~/_TRASH/${DIR_NAME}
fi